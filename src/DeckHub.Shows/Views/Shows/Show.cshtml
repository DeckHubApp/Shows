@model DeckHub.Shows.Models.Live.ShowViewModel

@{
    ViewBag.Title = Model.Title;
    Layout = "_Layout";
}

<div class="row">
    <div class="col-sm-12 col-md-8">
        <div class="row">
            <div class="col">
                <img src="/slides/@Model.Place/@Model.Presenter/@Model.Slug/@Model.Slide" alt="Slide @Model.Slide" class="img-fluid" id="slide-image"/>
            </div>
        </div>
        <div class="row">
            <div class="col">
                <div id="notes"></div>
            </div>
        </div>
    </div>
    <div class="col-md-4 col-sm-12">
        <div id="questions"></div>
    </div>
</div>

@section Scripts
{
    <script>
        window.DeckHub = window.DeckHub || {};
        window.DeckHub.show = '@Model.Place/@Model.Presenter/@Model.Slug';
        window.DeckHub.slide = @Model.Slide;
    </script>

    <environment include="Development">
        <script src="~/lib/@@reactivex/rxjs/global/rxjs.umd.js"></script>
        <script src="~/lib/@@aspnet/signalr/browser/signalr.js"></script>
        <script src="~/lib/vue/vue.js"></script>
    </environment>
    <environment exclude="Development">
        <script src="https://unpkg.com/@@reactivex/rxjs@6.1.0/dist/global/rxjs.umd.min.js"
                asp-fallback-src="~/lib/@@reactivex/rxjs/global/rxjs.umd.min.js"
                asp-fallback-test="window.Rx"
                crossorigin="anonymous"
                integrity="sha384-3mTCb4tOUiB0QBR1yqRmwG25KQ5/U1jp8mqxZ8TH6QlAwPA49U9ZhbfCVAp2E70s">
        </script>
        <script src="https://unpkg.com/@@aspnet/signalr@1.0.0-rc1-update1/dist/browser/signalr.min.js"
                asp-fallback-src="~/lib/@@aspnet/signalr/browser/signalr.min.js"
                asp-fallback-test="window.signalR"
                crossorigin="anonymous"
                integrity="sha384-AwmpA5VV/+hRfLYvLbL95sXfajv7ny+Uz3TiOlHVsQ/F9qMRaTM60T0joCnBbMp3">
        </script>
        <script src="https://unpkg.com/vue@2.5.16/dist/vue.min.js"
                asp-fallback-src="~/lib/vue/vue.min.js"
                asp-fallback-test="window.Vue"
                crossorigin="anonymous"
                integrity="sha384-DwsLA0O/He+RjlS7pFkqEHfsCgdTMU+nSuUq/qkxvKSTED+s4vRttKEZtf4xTW1+"></script>
    </environment>
    <script src="/hub/hub.js"></script>
    <script src="/questions/questions.js"></script>
    <script src="/notes/notes.js"></script>
    <script src="~/show.js"></script>
}